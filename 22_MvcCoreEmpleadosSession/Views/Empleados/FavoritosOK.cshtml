@model IEnumerable<_22_MvcCoreEmpleadosSession.Models.Empleado> 
@{
    ViewData["Title"] = "EmpleadosFav";
} 

@{
    List<Empleado> favoritos = memoryCache.Get<List<Empleado>>("FAVORITOS");
} 

<h1>FAVORITOS OK</h1>

@if (favoritos != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdEmpleado)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.Oficio)</th>
                <th>@Html.DisplayNameFor(model => model.Salario)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in favoritos)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => emp.IdEmpleado)</td>
                    <td>@Html.DisplayFor(modelItem => emp.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => emp.Oficio)</td>
                    <td>@Html.DisplayFor(modelItem => emp.Salario)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
} 
else 
{
    <h1>NO HAY FAVORITOS</h1>
}